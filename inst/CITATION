citHeader("To cite austin in publications use:")

citEntry(entry="Manual",
         title = "Austin: {A}n {R} package for doing things with words",
         author = "Will Lowe",
         year   = version$year,
         url    = "http://www.williamlowe.net/austin",
         textVersion = 
         paste("Will Lowe (", version$year, "). ", 
               "Austin: An R package for doing things with words. ",
               "URL http://www.williamlowe.net/austin",
               sep="")
         )

